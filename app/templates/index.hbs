<div class="content">
  <div class="layout-row layout-wrap">
    {{#each model as |item|}}
    <div class="flex-25 item-card">
      {{#paper-card as |card|}}
      {{card.image src="https://www.placecage.com/200/300" alt="Washed Out" title="Washed Out"}}
      {{#card.title as |title|}}
      {{#title.text as |text|}}
      {{#text.headline}}{{item.item_name}}{{/text.headline}}
      {{/title.text}}
      {{/card.title}}
      {{#card.content}}
      <p>
        {{item.item_desc}}
      </p>
      {{/card.content}}
      {{#card.actions}}
      {{#paper-button}}Contact{{/paper-button}}
      {{#paper-button}}Buy{{/paper-button}}
      {{/card.actions}}
      {{/paper-card}}
    </div>
    {{/each}}
  </div>
</div>
